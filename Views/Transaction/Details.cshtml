@model CSCI3110_Term_Project.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<h1>@ViewData["Title"]</h1>

<div class="border p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.TransactionId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
