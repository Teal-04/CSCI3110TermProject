@model IEnumerable<CSCI3110_Term_Project.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>

<p>
    <a asp-controller="Transaction" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Transaction
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Category</th>
            <th class="text-end">Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Date.ToShortDateString()</td>
                <td>@t.Type</td>
                <td>@t.Category?.Name</td>
                <td class="text-end">@t.Amount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.TransactionId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@t.TransactionId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@t.TransactionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
