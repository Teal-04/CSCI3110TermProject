@model IEnumerable<CSCI3110_Term_Project.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Category
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Type</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.CategoryId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@c.CategoryId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@c.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
