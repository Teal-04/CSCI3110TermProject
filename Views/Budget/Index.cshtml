@model IEnumerable<CSCI3110_Term_Project.Models.Budget>

@{
    ViewData["Title"] = "Budgets";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Budget" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Budget
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Category</th>
            <th class="text-end">Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Category?.Name</td>
                <td class="text-end">@b.Amount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@b.BudgetId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@b.BudgetId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@b.BudgetId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
